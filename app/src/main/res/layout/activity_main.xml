<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="227dp"
        android:layout_marginTop="648dp"
        android:layout_marginBottom="35dp"
        android:text="CALCULAR"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="531dp" />

    <Button
        android:id="@+id/btnCalcular2"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="649dp"
        android:layout_marginBottom="34dp"
        android:text="VOLTAR"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="531dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="INSIRA O CRESCIMENTO EM PORCENTAGEM (%)"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtAno1"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="EX: 5" />

    <EditText
        android:id="@+id/edtAno2"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="355dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="EX: 4" />

    <EditText
        android:id="@+id/edtAno3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="202dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="EX: 3" />

    <TextView
        android:id="@+id/txtResultadoFinal"
        android:layout_width="340dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="113dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>